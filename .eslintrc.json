{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "better-styled-components"],
  "extends": ["next", "next/core-web-vitals", "prettier", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "react/display-name": "off",
    "react/no-unescaped-entities": "off",
    "react/react-in-jsx-scope": "off",
    "react-hooks/exhaustive-deps": "off",
    "react-hooks/rules-of-hooks": "off",
    "import/no-anonymous-default-export": "off",
    "better-styled-components/sort-declarations-alphabetically": 0,
    "@next/next/next-script-for-ga": "off",
    "@next/next/no-script-in-document": "off",
    "@next/next/no-page-custom-font": "off",
    "@next/next/no-document-import-in-page": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-empty-function": "off",
    "@next/next/no-html-link-for-pages": "off",
    "@next/next/no-sync-scripts": "off",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-non-null-assertion": "off"
  }
}
